@model MVC1.Models.BookModel
@{
    ViewBag.Title = "AddorEdit";
}

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.BookId)
        <div class="form-group">
            @Html.LabelFor(model => model.Title)
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ISBN)
            @Html.EditorFor(model => model.ISBN)
            @Html.ValidationMessageFor(model => model.ISBN)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AuthorName)
            @Html.EditorFor(model => model.AuthorName)
            @Html.ValidationMessageFor(model => model.AuthorName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PublishedDate)
            @Html.EditorFor(model => model.PublishedDate)
            @Html.ValidationMessageFor(model => model.PublishedDate)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Quantity)
            @Html.EditorFor(model => model.Quantity)
            @Html.ValidationMessageFor(model => model.Quantity)
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btnbutton" />
            <input type="Reset" value="Reset" class="btnbutton" />
        </div>
    }
</div>

@section scripts {

    @Scripts.Render("~/bundles/jqueryval");
}


